<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <!-- <link rel="stylesheet" href="/css/estilos_registro.css"> -->
        <!-- <link rel="stylesheet" href="/css/stylesAlan.css"> -->
        <!-- <link rel="stylesheet" href="/css/stylesLucas.css"> -->
        <link rel="stylesheet" href="/css/styles.css">
        <title>Nuevo Producto</title>
    </head>
    <body id="bodyEntero">


        <%- include("../partials/header") %>
        
        <section class="bg-box" style="margin-top: 100px;">

            <h4 class="fs-1">Nuevo producto</h4>
            <hr class="registro-hr">


            <form class="formularioRegistroProd" action="/products/creacion_producto" method="POST" enctype="multipart/form-data">
                <div class="formControl">

                    <label for="name"></label>
                    <input class="datos_a_ingresar" type="text" name="name" id="name" value="<%= locals.oldData ? oldData.name : null %>" placeholder="Nombre de Producto">
                    <% if (locals.errors && errors.name) { %>
                        <p class="textErrorForm"><%= errors.name.msg %></p>
                    <% } %>
                    <p class="textErrorForm"></p>

                </div>

                <div class="formControl">

                    <label for="description"></label>
                    <textarea class="datos_a_ingresar" type="text" name="description" id="description" placeholder="Descripcion del Producto"><%= locals.oldData ? oldData.description : null %></textarea>
                    <% if (locals.errors && errors.description) { %>
                        <p class="textErrorForm"><%= errors.description.msg %></p>
                    <% } %>
                    <p class="textErrorForm"></p>

                </div>
                <div class="formControl"> 

                    <h4 class="fs-2">Seleccionar imagen</h4>
                    <label for="image"></label>
                    <input class="datos_a_ingresar" type="file" name="image" id="image" accept=".png, .img, .jpg, .jpeg">
                    <% if (locals.errors && errors.image) { %>
                        <p class="textErrorForm"><%= errors.image.msg %></p>
                    <% } %>
                    <p class="textErrorForm"></p>

                </div>

                <div class="formControl">

                    <label for="price"></label>
                    <input class="datos_a_ingresar" type="text" name="price" id="price" value="<%= locals.oldData ? oldData.price : null %>" placeholder="Precio del Producto">
                    <% if (locals.errors && errors.price) { %>
                        <p class="textErrorForm"><%= errors.price.msg %></p>
                    <% } %>
                    <p class="textErrorForm"></p>

                </div>

                <h4 class="fs-2">Seleccionar categor√≠a</h4>
                
                <div class="formControl">

                    <label for="categoriaProducto"></label>
                    <div class="tipoProd">
                        <div class="tipoProdBox">
                            <input type="radio" name="category" id="category" class="category" value="juegos">
                            <label class="tipoLabel fs-2" for="juegos">Juegos</label>
                        </div>
                        <div class="tipoProdBox">
                            <input type="radio" name="category" id="category" class="category" value="items">
                            <label class="tipoLabel fs-2" for="items">Items</label>
                        </div>
                        <div class="tipoProdBox">
                            <input type="radio" name="category" id="category" class="category" value="bundle">
                            <label class="tipoLabel fs-2" for="bundle">Bundle</label>
                        </div>
                        <div class="tipoProdBox">
                            <input type="radio" name="category" id="category" class="category" value="coins">
                            <label class="tipoLabel fs-2" for="coins">Spartan Coins</label>
                        </div>
                        <div class="tipoProdBox">
                            <input type="radio" name="category" id="category" class="category" value="merchandising">
                            <label class="tipoLabel fs-2" for="merchandising">Merchandising</label>
                        </div>
                    </div>
                    <% if (locals.errors && errors.category) { %>
                        <p class="textErrorForm"><%= errors.category.msg %></p>
                    <% } %>
                    <p class="textErrorForm"></p>

                </div>
                
                <label for="boton"></label>
                <div class="d-grid gap-2">
                    <input id="btn-registrarme" class="btn btn-primary fs-2" type="submit" value="Registrar"></input>              
                </div>
                <div class="d-grid gap-2">
                    <input id="btn-registrarme" class="btn btn-primary fs-2" type="reset" value="Reiniciar"></input>             
                </div>
        </form>

        </section>
        
        <br>

        <%- include("../partials/footer") %>
        <br>
        <br>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
        <script src="/js/menuHamburguesa.js" async></script>
        <script src="/js/validacionRegistroProducto.js" async></script>
        <script src="/js/authAdmin.js" async></script>

    </body>

</html>